<Window x:Name="ProductosCatalogo" x:Class="TiendaOnline.CatalogoProductos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TiendaOnline"
        mc:Ignorable="d"
        Title="CatalogoProductos" Height="450" Width="800">
    <Grid>
        <Label Content="Productos" HorizontalAlignment="Left" Margin="76,88,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ProductoCombo" HorizontalAlignment="Left" Margin="187,92,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>
        <Button Content="Comprar" HorizontalAlignment="Center" Margin="0,291,0,0" VerticalAlignment="Top"/>
        <Label Content="Precio" HorizontalAlignment="Left" Margin="86,217,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Subtotal" Content="Total" HorizontalAlignment="Left" Margin="187,217,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Cantidad" HorizontalAlignment="Left" Margin="79,163,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Cantidad" HorizontalAlignment="Left" Height="26" Margin="187,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
